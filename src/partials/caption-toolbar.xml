<CaptionToolBar has="display">
	<Group class="tools-left">
		<Options>
			<Tool symbol="icon-rewind"/>
			<Tool symbol="icon-forward"/>
			<Tool symbol="icon-stop" click="stop-audio"/>
			<Tool symbol="icon-play" click="play-audio"/>
			<Tool symbol="icon-record"/>
			<Tool symbol="icon-loop"/>
		</Options>
	</Group>
	<Group class="display">
		<Field class="blank-display">
			
		</Field>
		<Canvas/>
	</Group>
	<Group class="tools-right">
		<Options>
			<Tool symbol="icon-copy"/>
			<Tool symbol="icon-paste"/>
			<Tool symbol="icon-cut"/>
			<Tool symbol="icon-silence"/>
		</Options>
	</Group>
	<Group class="empty"/>
</CaptionToolBar>
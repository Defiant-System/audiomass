<MenuBar>
	<Menu name="ImAudio">
		<Menu name="About ImAudio" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Settings" for="view-settings">
			<Menu name="Show Sidebar" click="toggle-sidebar" is-checked="1"/>
			<Menu name="Show Dock" click="toggle-dock" is-checked="1"/>
			<Menu type="divider"/>
			<Menu name="Silence Selected" disabled="1"/>
			<Menu name="Silence Non-selected" disabled="1"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Quit ImAudio" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New File" click="tab.new" hotkey="alt+t"/>
		<Menu type="divider"/>
		<Menu name="Export / Download"/>
		<Menu name="Load from Computer"/>
		<Menu name="Load Sample File"/>
		<Menu name="Load From URL"/>
		<Menu type="divider"/>
		<Menu name="Close File" click="close-tab" hotkey="alt+w"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Undo" hotkey="shift+z"/>
		<Menu name="Redo" hotkey="shift+y"/>
		<Menu type="divider"/>
		<Menu name="Play" hotkey="Space"/>
		<Menu name="Stop"/>
		<Menu name="Select All" hotkey="shift+a"/>
		<Menu name="Deselect All"/>
	</Menu>
	<Menu name="Effects">
		<Menu name="Gain"/>
		<Menu name="Fade In"/>
		<Menu name="Fade Out"/>
		<Menu name="Compressor"/>
		<Menu name="Distortion"/>
		<Menu name="Reverb"/>
	</Menu>
	<Menu name="View">
		<Menu name="Follow Cursor" is-checked="1"/>
		<Menu name="Peak Separators" is-checked="1"/>
		<Menu name="Timeline" is-checked="1"/>
		<Menu type="divider"/>
		<Menu name="Frequency Analyser"/>
		<Menu name="Spectrum Analyser"/>
		<Menu name="Tempo Tools"/>
		<Menu name="ID3 Tags"/>
		<Menu type="divider"/>
		<Menu name="Center to Cursor" hotkey="tab"/>
		<Menu name="Reset Zoom"/>
	</Menu>
	<Menu name="Window">
		<Menu name="New Window" click="new-spawn" hotkey="alt+n"/>
		<Menu name="New Tab" click="tab.new" hotkey="alt+t"/>
		<Menu name="Merge All Windows" click="merge-all-windows" hotkey="alt+c"/>
		<Menu type="divider"/>
		<Menu name="Minimize" shell="win -s min"/>
		<Menu name="Maximize" shell="win -s max"/>
		<Menu type="divider"/>
		<Menu name="Close Tab" click="close-tab" hotkey="alt+w"/>
		<Menu name="Close Window" click="close-clone-window" hotkey="alt+shift+w"/>
	</Menu>
	<Menu name="Help">
		<Menu name="ImAudio Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>
<MenuBar>
	<Menu name="ImAudio">
		<Menu name="About ImAudio" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Settings" for="view-settings">
			<Menu name="Show Sidebar" click="toggle-sidebar" is-checked="1"/>
			<Menu name="Show Dock" click="toggle-dock" is-checked="1"/>
			<Menu type="divider"/>
			<Menu name="Silence Selected" disabled="1"/>
			<Menu name="Silence Non-selected" disabled="1"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Quit ImAudio" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New File" click="tab.new" hotkey="alt+t"/>
		<Menu type="divider"/>
		<Menu name="Export / Download"/>
		<Menu name="Load from Computer"/>
		<Menu name="Load Sample File"/>
		<Menu name="Load From URL"/>
		<Menu type="divider"/>
		<Menu name="Close File" click="close-tab" hotkey="alt+w"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Undo" hotkey="shift+z"/>
		<Menu name="Redo" hotkey="shift+y"/>
		<Menu type="divider"/>
		<Menu name="Play" hotkey="Space"/>
		<Menu name="Stop"/>
		<Menu name="Select All" hotkey="shift+a"/>
		<Menu name="Deselect"/>
	</Menu>
	<Menu name="Effects" for="effects">
		<Menu name="Gain" click="open-dialog" arg="dlgCain"/>
		<Menu name="Fade In" disabled="1"/>
		<Menu name="Fade Out" disabled="1"/>
		<Menu name="Normalize" disabled="1"/>
		<Menu type="divider"/>
		<Menu name="Compressor" click="open-dialog" arg="dlgCompressor"/>
		<Menu name="Paragraphic EQ" click="open-dialog" arg="dlgParagraphicEq"/>
		<Menu name="Graphic EQ" click="open-dialog" arg="dlgGraphicEq"/>
		<Menu name="Graphic EQ - 20 Bands" click="open-dialog" arg="dlgGraphicEq20"/>
		<Menu name="Hard Limiter" disabled="1"/>
		<Menu name="Delay" disabled="1"/>
		<Menu name="Distortion" disabled="1"/>
		<Menu name="Reverb" disabled="1"/>
		<Menu name="Speed Up / Down" disabled="1"/>
		<Menu type="divider"/>
		<Menu name="Reverse" disabled="1"/>
		<Menu name="Invert" disabled="1"/>
		<Menu name="Remove Silence" disabled="1"/>
	</Menu>
	<Menu name="View">
		<Menu name="Follow Cursor" is-checked="1"/>
		<Menu name="Peak Separators" is-checked="1"/>
		<Menu name="Timeline" is-checked="1"/>
		<Menu type="divider"/>
		<Menu name="Frequency Analyser"/>
		<Menu name="Spectrum Analyser"/>
		<Menu name="Tempo Tools"/>
		<Menu name="ID3 Tags"/>
		<Menu type="divider"/>
		<Menu name="Center to Cursor" hotkey="tab"/>
		<Menu name="Reset Zoom"/>
	</Menu>
	<Menu name="Window">
		<Menu name="New Window" click="new-spawn" hotkey="alt+n"/>
		<Menu name="New Tab" click="tab.new" hotkey="alt+t"/>
		<Menu name="Merge All Windows" click="merge-all-windows" hotkey="alt+c"/>
		<Menu type="divider"/>
		<Menu name="Minimize" shell="win -s min"/>
		<Menu name="Maximize" shell="win -s max"/>
		<Menu type="divider"/>
		<Menu name="Close Tab" click="close-tab" hotkey="alt+w"/>
		<Menu name="Close Window" click="close-clone-window" hotkey="alt+shift+w"/>
	</Menu>
	<Menu name="Help">
		<Menu name="ImAudio Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>

	<Menu for="selection">
		<Menu name="Effects" invoke="effects"/>
		<Menu type="divider"/>
		<Menu name="Copy"/>
		<Menu name="Cut"/>
		<Menu name="Paste" disabled="1"/>
		<Menu name="Deselect"/>
		<Menu type="divider"/>
		<Menu name="File from Selection"/>
	</Menu>
</MenuBar>
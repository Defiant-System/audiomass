<CaptionToolBar has="display">
	<Group>
		<Tool symbol="icon-sidebar" click="toggle-sidebar" state="disabled"/>
		<Options>
			<Tool symbol="icon-undo" click="file-undo" state="disabled"/>
			<Tool symbol="icon-redo" click="file-redo" state="disabled"/>
		</Options>
	</Group>
	<Group class="tools-left">
		<Options type="grouped">
			<Tool symbol="icon-rewind" click="rewind-audio" state="disabled"/>
			<Tool symbol="icon-forward" click="forward-audio" state="disabled"/>
			<Tool symbol="icon-stop" click="stop-audio" state="disabled"/>
			<Tool symbol="icon-play" click="play-audio" state="disabled"/>
			<Tool symbol="icon-record" click="record-audio" state="disabled"/>
			<Tool symbol="icon-loop" click="loop-audio" state="disabled"/>
		</Options>
	</Group>
	<Group class="display">
		<Field class="blank-display">
			<span class="current-time" title="Cursor time">00:00.000</span>
			<span class="total-time" title="Total time">00:00.000</span>
			<span class="hover-time" title="Hover time">00:00.000</span>
		</Field>
		<Canvas/>
	</Group>
	<Group class="tools-right">
		<Options>
			<Tool symbol="icon-copy" click="copy-selection" state="disabled"/>
			<Tool symbol="icon-paste" click="paste-selection" state="disabled"/>
			<Tool symbol="icon-cut" click="cut-selection" state="disabled"/>
			<Tool symbol="icon-silence-selected" click="silence-selection" state="disabled"/>
		</Options>
		<Tool symbol="icon-cogs" menu="view-settings" state="disabled"/>
	</Group>
	<Group class="empty"/>
</CaptionToolBar>
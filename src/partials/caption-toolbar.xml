<CaptionToolBar has="display">
	<Group>
		<Tool symbol="icon-sidebar" click="toggle-sidebar" state="active"/>
		<Tool symbol="icon-dock" click="toggle-dock"/>
	</Group>
	<Group class="tools-left">
		<Options>
			<Tool symbol="icon-rewind" state="disabled"/>
			<Tool symbol="icon-forward" state="disabled"/>
			<Tool symbol="icon-stop" click="stop-audio" state="disabled"/>
			<Tool symbol="icon-play" click="play-audio" state="disabled"/>
			<Tool symbol="icon-record" state="disabled"/>
			<Tool symbol="icon-loop" state="disabled"/>
		</Options>
	</Group>
	<Group class="display">
		<Field class="blank-display">
			
		</Field>
		<Canvas/>
	</Group>
	<Group class="tools-right">
		<Options>
			<Tool symbol="icon-copy" state="disabled"/>
			<Tool symbol="icon-paste" state="disabled"/>
			<Tool symbol="icon-cut" state="disabled"/>
			<Tool symbol="icon-silence" state="disabled"/>
		</Options>
	</Group>
	<Group class="empty"/>
</CaptionToolBar>